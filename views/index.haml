#message
%form{action: "/send_message", method: "post", id: "send_message", role: "form"}
  .form-group
    %label{for: "subreddit"} Subreddit to send message from:
    %input{name: "subreddit", type: "text", class: "form-control", id: "subreddit"}
    %a{href: "#", id: "get_random_subreddit"} Click here to get a random subreddit
  .form-group
    %label{for: "phone_number"} Phone number to send the message to:
    %input{name: 'phone_number', type: "text", class: "form-control", id: "phone_number"}
  %br
  %input{type: "submit", class: 'btn btn-default'}/